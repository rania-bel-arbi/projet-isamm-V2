{% extends('interfaces/layout.html.twig')  %}

{% block title %}se connecter-Isamm Network{% endblock %}


{% block body %}

   <h1 align="center"> Bienvenue dans Isamm Network</h1>
    <div id="login-page">
        <div class="container">
{% if error %}
            <h6 align="center" class="alert alert-danger">{{ error.messageKey }}</h6>

{% endif %}
            <form class="form-login" action={{ path('login') }} method="POST">
                <h2 class="form-login-heading">se connecter</h2>
                <div class="login-wrap">
                    <label>Email</label>
                    <input type="text" name="_username"  class="form-control" placeholder="Entrer votre email" autofocus required >
                    <br>
                    <label>Mot de passe</label>
                    <input type="password" name="_password" class="form-control" placeholder="Entrer votre mot de passe" required >
                    <label class="checkbox">
		                <span class="pull-right">
		                    <a data-toggle="modal" href="login.html.twig#myModal"> Mot de passe oublié?</a>

		                </span>
                    </label>
                    <button class="btn btn-theme btn-block"  type="submit"><i class="fa fa-lock"></i>  Connexion</button>
                    <hr>

                    <!--div class="login-social-link centered">
                    <p>or you can sign in via your social network</p>
                        <button class="btn btn-facebook" type="submit"><i class="fa fa-facebook"></i> Facebook</button>
                        <button class="btn btn-twitter" type="submit"><i class="fa fa-twitter"></i> Twitter</button>
                    </div-->
                    <div class="registration">
                        Vous n'avez pas un compt?<br/>
                        creer un compt
                        <a class="" href="{{path("etudiant")}}">
                            Etudiant

                        </a>ou
                        <a class="" href="{{ path("diplome") }}">
                           Diplomé

                        </a>
                    </div>

                </div>

                <!-- Modal -->
                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">Mot de passe oublié ?</h4>
                            </div>
                            <div class="modal-body">
                                <p>Entrer votre adress mail pour rénitialider votre mot de passe.</p>
                                <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">

                            </div>
                            <div class="modal-footer">
                                <button data-dismiss="modal" class="btn btn-default" type="button">Retour</button>
                                <button class="btn btn-theme" type="button">envoyer</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- modal -->

            </form>

        </div>
    </div>
{% endblock %}

 {% block javascripts %}

     <script><!-- $.backstretch("assets/img/login-bg.jpg", {speed: 500});-->
     </script>

 {% endblock %}